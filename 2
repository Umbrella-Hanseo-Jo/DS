#include <stdio.h>
int main()
{
int i; /* 일반 변수 선언 */
int *ptr; /* 포인터 변수 선언 */
int **dptr; /* 이중 포인터 변수 선언 */
i = 1234;
printf("----- [Hanseo Jo] [2022041012] -----");
printf("[checking values before ptr = &i] \n");
printf("value of i == %d\n", i); /* 변수 i == 1234 */
printf("address of i == %p\n", &i); /* 변수 i가 실제로 위치하고 있는 메모리상의 주소 */
printf("value of ptr == %p\n", ptr); /* 변수 ptr의 값 */
printf("address of ptr == %p\n", &ptr); /* 변수 ptr이 실제로 위치하고 있는 메모리상의 주소 */

ptr = &i; /* ptr is now holding the address of i */

printf("\n[checking values after ptr = &i] \n"); /* ptr == &i */
printf("value of i == %d\n", i); /* 변수 i == 1234 */
printf("address of i == %p\n", &i); /* 변수 i가 실제로 위치하고 있는 메모리상의 주소 */
printf("value of ptr == %p\n", ptr); /* 변수 ptr == 변수 i가 실제로 위치하고 있는 메모리상의 주소 */
printf("address of ptr == %p\n", &ptr); /* 변수 ptr이 실제로 위치하고 있는 메모리상의 주소 */
printf("value of *ptr == %d\n", *ptr); /* 변수 i가 실제로 위치하고 있는 메모리상의 주소가 나타내는 값 */

dptr = &ptr; /* dptr is now holding the address of ptr */

printf("\n[checking values after dptr = &ptr] \n");
printf("value of i == %d\n", i); 
printf("address of i == %p\n", &i); 
printf("value of ptr == %p\n", ptr); 
printf("address of ptr == %p\n", &ptr); 
printf("value of *ptr == %d\n", *ptr); 
printf("value of dptr == %p\n", dptr); /* 변수 dptr == 변수 ptr이 실제로 위치하고 있는 메모리상의 주소 */
printf("address of dptr == %p\n", &dptr); /* 변수 dptr이 실제로 위치하고 있는 메모리상의 주소 */
printf("value of *dptr == %p\n", *dptr); /* 변수 dptr의 값 == 변수 i가 실제로 위치하고 있는 메모리상의 주소 */
printf("value of **dptr == %d\n", **dptr); /* 변수 i가 실제로 위치하고 있는 메모리상의 주소가 나타내는 값 */

*ptr = 7777; /* changing the value of *ptr */

printf("\n[after *ptr = 7777] \n");
printf("value of i == %d\n", i); /* 변수 i의 값 == 7777 */
printf("value of *ptr == %d\n", *ptr); /* 변수 ptr의 값 == 7777 */
printf("value of **dptr == %d\n", **dptr); /* 변수 dptr의 값 == 7777 */

**dptr = 8888; /* changing the value of **dptr */

printf("\n[after **dptr = 8888] \n");
printf("value of i == %d\n", i); /* 변수 i의 값 == 8888 */
printf("value of *ptr == %d\n", *ptr); /* 변수 ptr의 값 == 8888*/
printf("value of **dptr == %d\n", **dptr); /* 변수 dptr의 값 == 8888 */
return 0;
}
